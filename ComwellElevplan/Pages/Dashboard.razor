@page "/dashboard"
@layout MainLayout

<div class="dashboard">
    <div class="greeting">
        <h3>Velkommen tilbage!</h3>
        <p>Her er en oversigt over din aktivitet.</p>
    </div>

    <div class="stats">
        <div class="stat-item">
            <div>
                <div class="label">Opnåede point</div>
                <div class="value">1200</div>
            </div>
        </div>
        <div class="stat-item">
            <div>
                <div class="label">Afsluttede opgaver</div>
                <div class="value">35</div>
            </div>
        </div>
    </div>

    <div class="dashboard-grid">
        <div class="panel">
            <h4>Progression</h4>
            <div class="progress-list">
                <div class="progress-item">
                    <span><strong>Opgave 1</strong> <span>75%</span></span>
                    <div class="bar"><div class="fill" style="width: 75%;"></div></div>
                </div>
                <div class="progress-item">
                    <span><strong>Opgave 2</strong> <span>50%</span></span>
                    <div class="bar"><div class="fill" style="width: 50%;"></div></div>
                </div>
            </div>
        </div>

        <div class="panel">
            <h4>Notifikationer</h4>
            <ul class="notification-list">
                <li>
                    <span>Nyt badge opnået</span>
                    <span class="time">i dag</span>
                </li>
                <li>
                    <span>Feedback tilgængelig</span>
                    <span class="time">i går</span>
                </li>
            </ul>
        </div>

        <div class="panel leaderboard">
            <div class="leaderboard-header">
                <h4>Top 3 elever</h4>
            </div>
            <ul class="leaderboard-list">
                <li>
                    <span>
                        <div class="rank rank-1">1</div> Alice
                        <div class="dashboard-avatar"></div>
                    </span>
                    <span class="score">1450</span>
                </li>
                <li>
                    <span>
                        <div class="rank rank-2">2</div> Bob
                        <div class="dashboard-avatar"></div>
                    </span>
                    <span class="score">1390</span>
                </li>
                <li>
                    <span>
                        <div class="rank rank-3">3</div> Clara
                        <div class="dashboard-avatar"></div>
                    </span>
                    <span class="score">1280</span>
                </li>
            </ul>
        </div>
    </div>
</div>
